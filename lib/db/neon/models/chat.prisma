model RemoteChat {
  id            String          @id @default(ulid())
  userId        String?
  title         String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  appInstanceId String
  appInstance   AppInstance     @relation(fields: [appInstanceId], references: [id])
  messages      RemoteMessage[]

  @@index([userId])
  @@index([appInstanceId])
}
